<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body class="main-page">
  
      <!-- Navigation -->
      <% include ../static/partials/navbar.ejs %>
      
      <!-- Page Content -->
      <main class="container mainJumbo">
        <% if(currentUser) { %>
        <!-- User Signed In -->

        <section class='lists'>
          <div class="container-fluid">
            <h4 class="lists-title">Shopping List</h4>
                <hr>
            <div class="row justify-content-center add-list-hover">
              <button type="button" class="btn btn-sq-lg btn-secondary add-list" data-toggle="modal" data-target="#listModal">
                <i class="fa fa-plus fa-5x"></i><br/>Add list
              </button>

              <% lists.forEach((list) => {  %>
               <a role="button" class="btn btn-sq-lg btn-secondary add-list" href="/lists/<%= list.id %>">
                <div class="bigLetter"><%= (list.title).charAt(0).toUpperCase(); %></div>
                <div class="smallTitle"><%= list.title %></div>
              </button>
              
              <% }) %>

              <!-- New List Modal Window -->
              <div class="modal fade" id="listModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">New List</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form method="POST" action="/lists/create">
                        <div class="form-group">
                          <label for="list-title" class="col-form-label">Title:</label>
                          <input type="text" name="title" class="form-control" id="list-title" required>
                        </div>
                        <div class="form-group">
                          <label for="list-category" class="col-form-label">Category:</label>
                          <input type="text" name="category" class="form-control" id="list-category" required>
                        </div>

                        <div class="modal-footer">
                          <a href="/" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
                          <button type="submit" class="btn btn-primary">Add List</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End of Modal Window -->



            </div> <!-- End of row  -->
          </div>
        </section>
       <% } %>
        
      </main>


       <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>